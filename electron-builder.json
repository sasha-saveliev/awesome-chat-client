{
  "productName": "awesome-chat",
  "directories": {
    "output": "release/"
  },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
    ],
  "win": {
    "icon": "dist",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
